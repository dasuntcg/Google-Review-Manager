// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
 provider = "sqlite"
  url      = "file:./dev.db"
}

model Review {
  id              String   @id
  author_name     String
  rating          Int
  text            String  
  time            Int
  profile_photo_url String?
  status          String   // "new", "published", or "unpublished"
  dateAdded       DateTime @default(now())
}